<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cyanrocks.ai.dao.mapper.AiIntelligenceProductMapper">
    <resultMap id="AiIntelligenceProduct" type="com.cyanrocks.ai.dao.entity.AiIntelligenceProduct">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="star" column="star"/>
        <result property="reviewCnt" column="review_cnt"/>
        <result property="amount" column="amount"/>
        <result property="longAmount" column="long_amount"/>
        <result property="channel" column="channel"/>
    </resultMap>
    <select id="getIntelligenceProductPage" resultMap="AiIntelligenceProduct">
        select * from ai_intelligence_product
        <if test="search != '' and search != null">
            where ${search}
        </if>
        order by
        <if test="sort != '' and sort != null">
             ${sort},
        </if>
        id desc
    </select>

</mapper>
